<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00448E"
    android:orientation="vertical"
    android:paddingBottom="32dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Command Channel" />

    <!--TextView
        android:id="@+id/textViewRx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="Rx"
        android:textColor="#FFFFFF" /-->

    <ScrollView
        android:id="@+id/scrollViewRx"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_alignBottom="@id/divider"
        android:background="#CBCBCB"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/textView">

        <EditText
            android:id="@+id/editTextRx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CBCBCB"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="top"
            android:inputType="text|textMultiLine"
            android:longClickable="false"
            android:padding="3dip"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textSize="15sp" />
    </ScrollView>

    <!--TextView
        android:id="@+id/textViewTx"
        android:layout_above="@id/editTextTx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Tx"
        android:textColor="#FFFFFF" /-->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#00448E"
        android:layout_above="@id/editTextTx"/>

    <EditText
        android:id="@+id/editTextTx"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="0dp"
        android:background="#FEE709"
        android:layout_alignParentBottom="true"
        android:ems="10"
        android:inputType="text"
        android:numeric="integer"
        android:padding="3dip" />


</RelativeLayout>
